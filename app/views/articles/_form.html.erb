    <![endif]-->
  </head>
  <body>


        <div class="container">

            <h1>Article</h1>

            <%= form_with model: article, class: "form" do |form| %>

                <div class="form-group row">
                <%= form.label :title, class: "col-form-label col-sm-2" %>
                <div class="col-sm-10">
                    <%= form.text_field :title, class: "form-control", placeholder: "Enter the article title", required: true %>
                    <% article.errors.full_messages_for(:title).each do |message| %>
                    <div><%= message %></div>
                    <% end %>
                </div>
                </div>

                <div class="form-group row">
                <%= form.label :body, class: "col-form-label col-sm-2" %>
                <div class="col-sm-10">
                    <%= form.text_area :body, class: "form-control", placeholder: "Enter the article body", rows: "10", required: true %>
                    <% article.errors.full_messages_for(:body).each do |message| %>
                    <div><%= message %></div>
                    <% end %>
                </div>
                </div>

                <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <%= form.submit "Create Article", class: "btn btn-primary" %>

                </div>
                </div>

            <% end %>

            <%= link_to "Home", root_path, class: "btn btn-outline-success", type: "button" %>

        </div>

